<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:padding="16dp">

    <ImageView
        android:id="@+id/item_photo_image"
        style="@style/listItem_imageview" />

    <TextView
        android:id="@+id/item_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_photo_image"
        style="@style/listItem_maptextview"/>

    <TextView
        android:id="@+id/item_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_map"
        style="@style/listItem_phonetextview"/>

    <TextView
        android:id="@+id/item_working_hrs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_phone"
        style="@style/working_hrs_textview"/>

</RelativeLayout>