<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Adjustments for ListItem.xml [ImageView] -->
    <style name="listItem_imageview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/piax</item>
        <item name="android:layout_marginBottom">50dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <!-- Adjustments for ListItem.xml [Map TextView] -->
    <style name="listItem_maptextview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:autoLink">map</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_marginBottom">30dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:drawableLeft">@drawable/ic_map_black_24dp</item>
        <item name="android:text">5th Adote Obour Street</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Adjustments for ListItem.xml [Phone TextView] -->
    <style name="listItem_phonetextview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:autoLink">phone</item>
        <item name="android:drawableLeft">@drawable/ic_call_black_24dp</item>
        <item name="android:text">0551338683</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Adjustments for ListItem.xml [Working Hours TextView] -->
    <style name="working_hrs_textview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000000</item>
        <item name="android:text">8am - 4pm</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginTop">25dp</item>
    </style>

    <!-- Products -->
    <style name="products">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/product</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">30dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="choco">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">50dp</item>
        <item name="android:text">@string/choco</item>
        <item name="android:textSize">30dp</item>
        <item name="android:textColor">#c9c9c9</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="milky">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:text">@string/milk</item>
        <item name="android:textSize">30dp</item>
        <item name="android:textColor">#c9c9c9</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="strawberry">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:text">@string/strawberry</item>
        <item name="android:textSize">30dp</item>
        <item name="android:textColor">#c9c9c9</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="vanila">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:text">@string/vanila</item>
        <item name="android:textSize">30dp</item>
        <item name="android:textColor">#c9c9c9</item>
        <item name="android:textStyle">italic</item>
    </style>

</resources>
